<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alina.todolist">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateTaskActivity"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"></activity>
        <activity android:name=".CategoryActivity" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".TaskActivity"
            android:label="@string/title_activity_task"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <service
            android:name=".maps.GPSTracker"
            android:enabled="true" />

        <provider
            android:name=".data.database.ToDoProvider"
            android:authorities="com.example.alina.todolist"
            android:enabled="true"
            android:exported="false">
        </provider>

    </application>

</manifest>